page {
  background-color: #f8f8f8;
  height: 100%;
}

.picker {
  padding: 19rpx 26rpx;
  background-color: #fff;
}

.content {
  height: 100%;
  min-height: 100%;
  justify-content: space-between;
  overflow-y: scroll;
  padding-bottom: 40rpx;
}

.view1 {
  width: 100%;
  height: 100rpx;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
}

.view1_text {
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  margin-left: 3%;
}

.view1_input {
  justify-content: center;
  align-items: center;
  border: 2rpx solid #478dde;
  height: 60rpx;
  width: 90%;
  margin-left: 3%;
  margin-right: 3%;
  margin-top: 10rpx;
  padding-left: 2%;
  padding-right: 2%;
  border-radius: 8rpx;
  font-size: 30rpx;
}

.view1_line {
  height: 1rpx;
  width: 94%;
  background: #478dde;
  margin-top: 20rpx;
  margin-left: 3%;
  margin-right: 3%;
}

.btn-view {
  width: 100%;
  margin-top: 80rpx;
}

.btn-view button {
  width: 94%;
  background-color: #478dde;
}

/*时间选择框  */

.view {
  display: flex;
  margin-left: 3%;
  margin-top: 30rpx;
}

.left_view {
  width: 50%;
  display: flex;
}

.right_view {
  width: 50%;
  display: flex;
}

.view1_time {
  font-size: 30rpx;
  width: 40%;
}

.view1_select {
  font-size: 30rpx;
  width: 40%;
  border: 1px solid lightgray;
  border-radius: 10rpx;
  padding-left: 15rpx;
  height: 45rpx;
}

.dot-bottom {
  font-size: 0;
  line-height: 0;
  border-width: 6px;
  border-color: black;
  border-bottom-width: 0;
  border-style: dashed;
  border-top-style: solid;
  border-left-color: transparent;
  border-right-color: transparent;
  margin-left: 50rpx;
  /* padding-top: 5rpx; */
}

.text_view {
  font-size: 30rpx;
  width: 100%;
}

.text_view label {
  color: red;
}

.nn {
  width: 100rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  height:45rpx;
}

