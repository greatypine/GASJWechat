page{
background-color: #F8F8F8;
height:100%;
}
.content{
  height: 100%;
  min-height: 100%;
  justify-content: space-between;
  overflow-y: scroll;
}
.view1{
  width: 86%;
  justify-content:center;
  align-items:center;
  margin: 20rpx 7%;
  display: block;
  
}
.view1_text{
  justify-content:center;
  align-items:center;
  font-size: 26rpx;
  color:#666;
  
}
.view1_input{
  justify-content:center;
  align-items:center;
  border: 2rpx solid #888;
  height: 60rpx;
  width: 100%;
  margin: 3rpx -2rpx;
  border-radius: 10rpx;
  color: #888;
  padding-left: 1%;

}
.view1_line{
  height: 1rpx;
  width: 100%;
  background: #478dde;
  margin-top: 20rpx;
}
.data_img{
   height: 50rpx;
   width:50rpx;

}
.view_data{
  height: 200rpx;
  width: 100%;
}
.button{
  background-color: #0484de;
  width: 100%; margin: 80rpx 0 0 0; color: #fff;
  height: 35px; line-height: 35px; font-size: 30rpx;
}
